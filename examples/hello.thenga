// ============================================
// fibonacci.thenga - Complete Program
// ============================================
// ingane aan Fibonacci sequence generator

pani fibonacci(n) {
    seriyano(n cheriyathum_same 1) {
        thirich_tha(0);
    }
    seriyano(n same_aano 2) {
        thirich_tha(1);
    }
    thirich_tha(fibonacci(n - 1) + fibonacci(n - 2));
}

para("Fibonacci Sequence:");
repeat_adi(10) {
    para("F(" + i + ") = " + fibonacci(i + 1));
}


// ============================================
// calculator.thenga - Simple Calculator
// ============================================
// ingane aan Simple calculator program

pani calculate(a, b, operation) {
    seriyano(operation same_aano "add") {
        thirich_tha(koottu(a, b));
    } allelum(operation same_aano "subtract") {
        thirich_tha(kurakku(a, b));
    } allelum(operation same_aano "multiply") {
        thirich_tha(gunikku(a, b));
    } allelum(operation same_aano "divide") {
        seriyano(b same_aano 0) {
            theri_vili("Cannot divide by zero mone!");
        }
        thirich_tha(harikku(a, b));
    } allengil {
        theri_vili("Invalid operation!");
    }
}

para("Calculator Demo:");
para("10 + 5 = " + calculate(10, 5, "add"));
para("10 - 5 = " + calculate(10, 5, "subtract"));
para("10 * 5 = " + calculate(10, 5, "multiply"));
para("10 / 5 = " + calculate(10, 5, "divide"));


// ============================================
// prime_checker.thenga - Prime Number Checker
// ============================================
// ingane aan Check if number is prime

pani is_prime(n) {
    seriyano(n cheriyathum_same 2) {
        thirich_tha(sheriyalla);
    }
    
    ith_aan i = 2;
    odi_repeat_mwone(i cheriya n) {
        seriyano((n % i) same_aano 0) {
            thirich_tha(sheriyalla);
        }
        i = i + 1;
    }
    
    thirich_tha(sheriya);
}

para("Prime number checker:");
ith_aan test_numbers = [2, 3, 4, 5, 10, 17, 20];
repeat_adi(length(test_numbers)) {
    ith_aan num = test_numbers[i];
    seriyano(is_prime(num)) {
        para(num + " is prime - Adipoli!");
    } allengil {
        para(num + " is not prime");
    }
}
